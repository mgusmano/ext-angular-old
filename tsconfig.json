{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": false,
		"outDir": "./dist",
		"noImplicitAny": false,
		"declaration": true,
		"lib": ["es2015", "dom"],
		"typeRoots": [
			"../node_modules/@types"
		],
		"types" : [
			"core-js"
		]
	},
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  },
	"exclude": [
		"node_modules",
		"demo/app/app.module.ts",
		"demo/app/app.component.ts"
	]
}
